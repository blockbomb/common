{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "packagePatterns": ["Test", "Assert", "Mock", "[Xx]unit", "Moq"],
      "groupName": "Testing deps",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "packagePatterns": ["SourceLink", "ValueTuple"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "packagePatterns": ["^Microsoft\\.Extensions"],
      "groupName": "Microsoft Extensions",
      "separateMinorPatch": true
    },
    {
      "packagePatterns": ["^Microsoft\\.Extensions"],
      "updateTypes": ["major", "minor"],
      "enabled": false
    },
    {
      "packagePatterns": ["System.Resources.Extensions"],
      "enabled": false
    }
  ]
}
