<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <!-- Build config -->
  <PropertyGroup>
    <AssemblyName>NanoByte.Common.WinForms</AssemblyName>
    <RootNamespace>NanoByte.Common</RootNamespace>
    <LangVersion>8.0</LangVersion>
    <TargetFrameworks>net20;net40;net45;net461;netcoreapp3.1</TargetFrameworks>
    <UseWindowsForms>True</UseWindowsForms>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn>
    <Nullable>annotations</Nullable>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <OutputType>Library</OutputType>
    <OutputPath>..\..\artifacts\$(Configuration)\</OutputPath>
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>..\sgKey.snk</AssemblyOriginatorKeyFile>
    <IncludeSymbols>True</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>
  <PropertyGroup Condition="'$(MSBuildRuntimeType)'=='Core'">
    <!-- .NET Core MSBuild does not support legacy ResGen -->
    <TargetFrameworks>net461;netcoreapp3.1</TargetFrameworks>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)'=='netcoreapp3.1'">
    <!-- Run nullability analysis only on annotated frameworks -->
    <Nullable>enable</Nullable>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)'=='net461'">
    <!-- Support non-string resources -->
    <GenerateResourceUsePreserializedResources>True</GenerateResourceUsePreserializedResources>
  </PropertyGroup>

  <!-- NuGet package metadata -->
  <PropertyGroup>
    <Description>Builds upon NanoByte.Common and adds various Windows Forms controls with an emphasis on progress reporting and data binding.</Description>
    <Authors>Bastian Eicher</Authors>
    <Copyright>Copyright Bastian Eicher et al.</Copyright>
    <PackageProjectUrl>https://common.nano-byte.net/</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/nano-byte/common</RepositoryUrl>
  </PropertyGroup>

  <!-- Dependencies -->
  <ItemGroup>
    <ProjectReference Include="..\Common\Common.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="TaskDialog" HintPath="..\..\lib\TaskDialog.dll" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)'!='netcoreapp3.1'">
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.0" PrivateAssets="All" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)'=='net461'">
    <PackageReference Include="System.Resources.Extensions" Version="5.0.0" />
  </ItemGroup>

  <!-- Bundle 3rd party libs in NuGet package -->
  <ItemGroup Condition="'$(MSBuildRuntimeType)'!='Core'">
    <None Include="..\..\lib\TaskDialog.*" Pack="true" PackagePath="lib/net20" />
    <None Include="..\..\lib\TaskDialog.*" Pack="true" PackagePath="lib/net40" />
    <None Include="..\..\lib\TaskDialog.*" Pack="true" PackagePath="lib/net45" />
    <None Include="..\..\lib\TaskDialog.*" Pack="true" PackagePath="lib/net461" />
    <None Include="..\..\lib\TaskDialog.*" Pack="true" PackagePath="lib/netcoreapp3.1" />
  </ItemGroup>


  <!-- Enable WinForms Designer support -->
  <ItemGroup>
    <Compile Update="Tasks\TaskRunDialog.cs" SubType="Form" />
    <Compile Update="Tasks\TaskRunDialog.Designer.cs" DependentUpon="TaskRunDialog.cs" />
    <Compile Update="Controls\OutputGridBox.cs" SubType="Form" />
    <Compile Update="Controls\OutputGridBox.Designer.cs" DependentUpon="OutputGridBox.cs" />
    <Compile Update="Controls\OutputBox.cs" SubType="Form" />
    <Compile Update="Controls\OutputBox.Designer.cs" DependentUpon="OutputBox.cs" />
    <Compile Update="Controls\OKCancelDialog.cs" SubType="Form" />
    <Compile Update="Controls\OKCancelDialog.Designer.cs" DependentUpon="OKCancelDialog.cs" />
    <Compile Update="Controls\InspectionForm.cs" SubType="Form" />
    <Compile Update="Controls\InspectionForm.Designer.cs" DependentUpon="InspectionForm.cs" />
    <Compile Update="Controls\InputBox.cs" SubType="Form" />
    <Compile Update="Controls\InputBox.Designer.cs" DependentUpon="InputBox.cs" />
    <Compile Update="Controls\ErrorReportForm.cs" SubType="Form" />
    <Compile Update="Controls\ErrorReportForm.Designer.cs" DependentUpon="ErrorReportForm.cs" />
    <EmbeddedResource Update="Controls\ErrorReportForm*.resx" DependentUpon="ErrorReportForm.cs" />
    <Compile Update="Controls\ErrorBox.cs" SubType="Form" />
    <Compile Update="Controls\ErrorBox.Designer.cs" DependentUpon="ErrorBox.cs" />
    <Compile Update="Controls\TimeSpanControl.cs" SubType="UserControl" />
    <Compile Update="Controls\TimeSpanControl.Designer.cs" DependentUpon="TimeSpanControl.cs" />
    <Compile Update="Controls\TaskControl.cs" SubType="UserControl" />
    <Compile Update="Controls\TaskControl.Designer.cs" DependentUpon="TaskControl.cs" />
    <Compile Update="Controls\FilteredTreeView.cs" SubType="UserControl" />
    <Compile Update="Controls\FilteredTreeView.Designer.cs" DependentUpon="FilteredTreeView.cs" />
    <EmbeddedResource Remove="**\*.filtered.resx" />
  </ItemGroup>

</Project>
